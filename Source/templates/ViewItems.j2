{% block content %}
	<div class="card">
		<h1>My grocery list</h1>
		<h2>Current items</h2>

		{% if list_ingredients %}
			<ul class="item-list">
				{% for list_ingredient, ingredient in list_ingredients %}
					<li>{{ ingredient.name }}</li>
				{% endfor %}
			</ul>
		{% else %}
			<p class="text-muted">No items yet. <a href="/AddListItem">Add your first item</a>.</p>
		{% endif %}
	</div>
{% endblock %}
