{% extends "Base.j2" %}

{% block title %}Login â€” Grocery Guru{% endblock %}

{% block content %}
	<div class="card">
		<h1>Grocery Guru</h1>
		<h2>Please log in</h2>

		{% if error %}<div class="alert-error">{{ error }}</div>{% endif %}

		<form name="login" method="POST" action="/Login">
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" id="email" placeholder="Enter your email" name="email" value="{{ request.form.email }}" required>
			</div>
			<div class="form-group">
				<label for="pass">Password</label>
				<input type="password" id="pass" placeholder="Enter your password" name="pass" value="{{ request.form.pass }}" required>
			</div>
			<button type="submit" class="btn btn-primary">Log in</button>
			<p class="text-muted" style="margin-top: 1rem;">
				Don't have an account? <a href="/CreateAccount">Create one</a>
			</p>
		</form>
	</div>
{% endblock %}
